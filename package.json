{
  "name": "webpack-with-SSR-and-CSR",
  "version": "1.0.2",
  "description": "React Server side and Client side rendering with webpack",
  "main": "index.js",
  "scripts": {
    "client:start": "webpack-dev-server --config config/webpack.config.client.js --mode=development",
    "client:dev": "webpack --config config/webpack.config.client.js --mode=development",
    "client:build": "webpack --config config/webpack.config.client.js --mode=production",
    "server:start": "webpack --config config/webpack.config.server.js --mode=development --watch",
    "server:dev": "webpack --config config/webpack.config.server.js --mode=development",
    "server:build": "webpack --config config/webpack.config.server.js --mode=production",
    "server:watch": "nodemon --watch build --exec \"node build/server/server.js \" ",
    "start": "npm-run-all --parallel client:start server:start server:watch"
  },
  "author": "RaseL Mahmud",
  "license": "",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.0",
    "http-proxy-middleware": "^0.20.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "html-loader": "^0.5.5",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "sass-loader": "^7.2.0",
    "style-loader": "^1.0.0",
    "terser-webpack-plugin": "^2.3.5",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0",
    "webpack-node-externals": "^1.7.2"
  }
}
